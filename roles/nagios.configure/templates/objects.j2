{{ ansible_managed | comment }}

define hostgroup {
    use                     linux-server
    host_name               {{ item }}
    address                 {{ hostvars[item]['ansible_facts'][default_ipv4']['address'] }}
}

define service {
    use                     local-service
    host_name               {{ item }}
    service_description     PING
    check_command           check_ping!100.0,20%!500.0,60%
}
